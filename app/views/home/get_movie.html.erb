




<div class="row logo">
   
    <div class="col-xs-12 ">
      <form  role="form"class="form-search" action="get_movie" method="get">
          <div class="input-group">
            <span class="input-group-addon">MMC</span>
            <input type="text" class="input-medium search-query form-control" id="searchform-home" name="search">
        </div>
      </form>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12 col-sm-4 poster">
      <img class="img-responsive movie-poster" src="<%= @movie_info["poster"] %>" >
    </div>
    <div class="col-xs-12 col-sm-8 movie-title">
      <h1>
        <%= @movie_info["title"] %>
      </h1>
          <span class="year">
            &nbsp;(<a href="http://www.imdb.com/year/<%= @movie_info["year"] %>/?ref_=tt_ov_inf"><%= @movie_info["year"] %></a>)
          </span>
    </div>
    <div class="col-xs-12 col-sm-8 movie-title">
     <p><%= @movie_info["rated"] %> | <%= @movie_info["runtime"] %> | <%= @movie_info["genre"] %> | <%= @movie_info["released"] %> </p>
      <hr/>
      <p><%= @movie_info["imdb_rating"] %>&nbsp;out of 10</p>
      <hr/>
      <p>
        <%= @movie_info["plot"] %>
      </p>
      <p>
        <strong>Director: </strong><%= @movie_info["director"] %><br>
        <strong>Writers: </strong><%= @movie_info["writer"] %><br>
        <strong>Stars: </strong><%= raw @stars %><br>
      </p>
      <!-- Button trigger modal -->
          <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Watch Trailer
          </button> 
          <a href="http://www.imdb.com/title/<%= @movie_info["imdb_id"] %>/">
          <button class="btn btn-primary">
            View on IMDB
          </button> 
          </a>   
    </div>
  </div>


  <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= @movie_info["title"] %></h4>
      </div>
      <div class="modal-body">
       <div class="flex-video widescreen">
        <%= raw @movie_info["trailer"] %>
       </div>
      </div>
      
    </div>
  </div>
</div>

